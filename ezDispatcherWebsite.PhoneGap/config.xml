<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.thetransfercenter.PinnacleMobileApp"
        versionCode = "12"
        version     = "1.1.2">
  
  <preference name="phonegap-version" value="3.1.0" />

  <name>Pinnacle Response System Mobile App</name>

  <description>
    Pinnacle Response System Mobile App
  </description>

  <author href="http://coenraets.org" email="suryakantg@smartdatainc.net">
    Suryakant Girhe
  </author>

  <!--
        Enable individual API permissions here.
        The "device" permission is required for the 'deviceready' event.
    -->
  
  <gap:plugin name="org.apache.cordova.device" />
  <gap:plugin name="org.apache.cordova.geolocation" />
  <gap:plugin name="org.apache.cordova.splashscreen" />
  <gap:plugin name="org.apache.cordova.dialogs" />
  <gap:plugin name="org.apache.cordova.vibration" />
  <gap:plugin name="org.apache.cordova.network-information" />
  <gap:plugin name="org.apache.cordova.globalization" />
  <gap:plugin name="org.apache.cordova.file" />
  
  
  <feature name="PushNotification">
    <param name="ios-package" value="PushNotification" />
  </feature>
  <!--<access origin="*.pushwoosh.com" />-->
  <!--
        If you do not want any permissions to be added to your app, add the
        following tag to your config.xml; you will still have the INTERNET
        permission on your app, which PhoneGap requires.
    -->
  <preference name="permissions"    value="none"/>

  <preference name="show-splash-screen-spinner" value="true" />
  <!-- ios: if set to false, the spinner won't appear on the splash screen during app loading -->
  <preference name="auto-hide-splash-screen"    value="true" />
  <!-- ios: if set to false, the splash screen must be hidden using a JavaScript API -->
  
  <!-- Plugins can also be added here. -->
  <!--
        <gap:plugin name="Example" />
        A list of available plugins are available at https://build.phonegap.com/docs/plugins
    -->

  <!-- Define app icon for each platform. -->
  

  <icon src="images/icon-57.png"            gap:platform="ios"        width="57" height="57" />
  <icon src="images/icon-72.png"            gap:platform="ios"        width="72" height="72" />
  <icon src="images/icon-57-2x.png"         gap:platform="ios"        width="114" height="114" />
  <icon src="images/icon-72-2x.png"         gap:platform="ios"        width="144" height="144" />

  <icon src="images/icon-36-ldpi.png"   gap:platform="android"    gap:density="ldpi" />
  <icon src="images/icon-48-mdpi.png"   gap:platform="android"    gap:density="mdpi" />
  <icon src="images/icon-72-hdpi.png"   gap:platform="android"    gap:density="hdpi" />
  <icon src="images/icon-96-xhdpi.png"  gap:platform="android"    gap:density="xhdpi" />
  
  <!--<gap:splash src="images/splash-iphone/splash-57.png"    gap:platform="ios" />-->
  
  
  <gap:splash src="images/splash-android/splash-36-ldpi.png"  gap:platform="android" gap:density="ldpi" />
  <gap:splash src="images/splash-android/splash-48-mdpi.png"  gap:platform="android" gap:density="mdpi" />
  <gap:splash src="images/splash-android/splash-72-hdpi.png"  gap:platform="android" gap:density="hdpi" />
  <gap:splash src="images/splash-android/splash-96-xhdpi.png" gap:platform="android" gap:density="xhdpi" />
  
  <gap:splash src="images/splash-iphone/splash-57.png"    gap:platform="ios"     width="320" height="480" />
  <gap:splash src="images/splash-iphone/splash-72.png" gap:platform="ios"     width="640" height="960" />
  <gap:splash src="images/splash-iphone/splash-57-2x.png"      gap:platform="ios"     width="768" height="1024" />
  <gap:splash src="images/splash-iphone/splash-72-2x.png"     gap:platform="ios"     width="1024" height="768" />
  
  
  <!--
        Define access to external domains.

        <access />            - a blank access tag denies access to all external resources.
        <access origin="*" /> - a wildcard access tag allows access to all external resource.

        Otherwise, you can specify specific domains:
    -->

  <!--<plugin name="Storage" value="org.apache.cordova.Storage" />-->
  <!--<gap:plugin name="com.adobe.plugins.pushplugin" />-->
  <gap:plugin name="com.phonegap.plugins.pushplugin" />
  <!--<gap:plugin name="com.pushwoosh.plugins.pushwoosh" version="3.0.0" />-->
  
</widget>


  
